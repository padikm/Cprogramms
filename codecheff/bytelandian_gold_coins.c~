#include<stdio.h>
//#define T 10
int exchange(int);
int main() {
	int Amount,n;
	while(scanf("%d",&n)!=EOF){
	//	scanf("%d",&n);
		Amount = exchange(n);
		printf("%d\n",Amount);
	}
	return 0;
		
}

int exchange(int n) {
	
	int sum=0,a,b,c;
	if(n==2)
		return n;
	a=n/2;
	b=n/3;
	c=n/4;
	sum = a+b+c;

	return sum;

}
